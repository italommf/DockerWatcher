{
  "name": "docker-watcher",
  "version": "1.0.0",
  "description": "Docker Watcher - Electron + React App",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron . --no-sandbox",
    "build": "vite build",
    "build:electron": "electron-builder",
    "package": "npm run build && npm run build:electron",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "react", "docker", "watcher"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.0",
    "@mui/material": "^5.14.20",
    "@mui/icons-material": "^5.14.19",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "react-router-dom": "^6.20.0",
    "notistack": "^3.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dockerwatcher.app",
    "productName": "Docker Watcher",
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "shared/**/*",
      "package.json"
    ]
  }
}
